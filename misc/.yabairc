#!/usr/bin/env sh

# necessary to load scripting-addition during startup on macOS
# *yabai --load-sa* is configured to run through sudo without a password
sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

# Global Settings
# Enable output of debug information to stdout. [<BOOL_SEL>]
yabai -m config debug_output on
yabai -m config layout bsp
yabai -m config window_border on
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.8

# Space labels
yabai -m space 1 --label doordash
yabai -m space 2 --label wolt
yabai -m space 3 --label personal

# Rules
yabai -m rule --add app="^Google Chrome$" space=^doordash

## Unmanaged, sticky
yabai -m rule --add app="^(System Preferences|Things|Raycast|Contexts|zoom.us)$" sticky=on manage=off 

## Personal
yabai -m rule --add app="^(Signal|Firefox|LINE|Music)$" space=^personal

# Padding
yabai -m config top_padding    5
yabai -m config bottom_padding 5
yabai -m config left_padding   5
yabai -m config right_padding  5
yabai -m config window_gap     5
